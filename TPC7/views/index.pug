extends layout

block content
  .w3-container.w3-indigo.w3-padding-16.w3-center
    h1 CLAV
    h3 Classificação e Avaliação da Informação Pública
  .w3-container(style="background: #f1f1f1;")
    table.w3-table-all.w3-hoverable.w3-auto(style="margin-top: 30px;")
        tr.w3-text-indigo.w3-border-indigo(style="border-bottom:2px solid")
            th Titulo
            th Código
        each item in classes
            tr
                td= item.titulo 
                td
                 a(href=item.codigo)= item.codigo
  
